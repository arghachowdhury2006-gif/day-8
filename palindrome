#include<stdio.h>
#include<string.h>
int main (){
char s[100];
int i,len,p=1;
printf("Enter a string name:\n");
scanf("%s", &s);
len=strlen(s);
for(i=0;i<len/2;i++){
    if(s[i]!=s[len-i-1]){
        p=0;
        break;
    }
}
if(p){
    printf("the string is palindrome:");
}
else{
    printf("The string is not palindrome");
}



return 0;
}
