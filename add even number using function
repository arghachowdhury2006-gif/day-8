#include<stdio.h>
int add(int n){
	int i,sum=0;
	for(i=0;i<=n;i++){
		if(i%2==0)
		sum+=i;
	}
	return sum;
}
int main(){
	int n,result;
	printf("Enter a number n: ");
	scanf("%d", &n);
	result=add(n);
	printf("%d", result);
	                                                                                                                                                                    
	return 0;
}
